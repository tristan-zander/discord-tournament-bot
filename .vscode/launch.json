{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'discord-bot'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=discord-bot",
                    "--package=discord-bot"
                ],
                "filter": {
                    "name": "discord-bot",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/discord-bot"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'discord-bot'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=discord-bot",
                    "--package=discord-bot"
                ],
                "filter": {
                    "name": "discord-bot",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'common'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=common"
                ],
                "filter": {
                    "name": "common",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}